<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home - Travel Packages</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- Header -->
    <header class="bg-dark text-white text-center py-4">
        <h1>Travel Packages</h1>
        <nav class="mt-3">
            <a href="/" class="text-white mx-3">Home</a>
            <% if (authenticated) { %>
                <a href="/logout" class="text-white mx-3">Logout</a>
            <% } else { %>
                <a href="/login" class="text-white mx-3">Login</a>
            <% } %>
        </nav>
    </header>

    <!-- Hero Section -->
    <section class="hero-section text-center text-white py-5">
        <div class="container">
            <h2 class="display-4">Descubra o mundo com nossos pacotes de viagem</h2>
            <p class="lead">Os melhores destinos pelos melhores preços!</p>
            <a href="#pacotes" class="btn btn-primary btn-lg">Ver Pacotes</a>
        </div>
    </section>

    <!-- Cards de Pacotes -->
    <section id="pacotes" class="container my-5">
        <h2 class="text-center mb-4">Nossos Pacotes</h2>
        <div class="row">
            <% packages.forEach(pkg => { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="<%= pkg.image %>" class="card-img-top img-fluid" alt="<%= pkg.name %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= pkg.name %></h5>
                            <p class="card-text"><strong>Destino:</strong> <%= pkg.destination %></p>
                            <p class="card-text"><strong>Partida:</strong> <%= pkg.departure %></p>
                            <p class="card-text"><strong>Preço:</strong> R$ <%= pkg.price.toFixed(2) %></p>
                            <a href="/package/<%= pkg.id %>" class="btn btn-primary">Detalhes</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-4">
        <p>&copy; 2023 Travel Packages. Todos os direitos reservados.</p>
        <p>Contato: contato@travelpackages.com</p>
    </footer>
</body>
</html>