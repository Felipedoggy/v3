<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pacotes de Viagem</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Pacotes de Viagem</h1>
        <div class="row">
            <% packages.forEach(pkg => { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title"><%= pkg.name %></h5>
                            <p class="card-text"><strong>Destino:</strong> <%= pkg.destination %></p>
                            <p class="card-text"><strong>Partida:</strong> <%= pkg.departure %></p>
                            <p class="card-text"><strong>Pre√ßo:</strong> R$ <%= pkg.price.toFixed(2) %></p>
                            <a href="/package/<%= pkg.id %>" class="btn btn-primary">Detalhes</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>